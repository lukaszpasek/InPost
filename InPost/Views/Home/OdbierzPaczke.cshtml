@{
    ViewData["Title"] = "OdbierzPaczke";
}
<h1>@ViewData["Title"]</h1>
<form>
    <div class="form-group">
        <label>Imie Odbiorcy</label>
        <input type="text" class="form-control" placeholder="Wpisz Imie">
    </div>
    <div class="form-group">
        <label>Nazwisko Odbiorcy</label>
        <input type="text" class="form-control" placeholder="Wpisz Nazwisko">
    </div>
    <div class="form-group">
        <label>Numer paczki</label>
        <input type="number" class="form-control" placeholder="Wpisz Numer paczki">
    </div>
    <button type="submit" class="btn btn-primary" style="margin-top:5px;">Odbierz</button>
</form>
